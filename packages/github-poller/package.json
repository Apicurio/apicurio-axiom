{
    "name": "@axiom/github-poller",
    "version": "1.0.0",
    "description": "GitHub event poller for Apicurio Axiom - polls GitHub and publishes to NATS",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "dev": "node --loader ts-node/esm --watch src/index.ts",
        "start": "node dist/index.js"
    },
    "keywords": [
        "axiom",
        "github",
        "poller",
        "nats"
    ],
    "author": "Apicurio Community",
    "license": "Apache-2.0",
    "dependencies": {
        "@axiom/common": "*",
        "@octokit/rest": "22.0.1",
        "better-sqlite3": "12.6.2",
        "js-yaml": "4.1.1",
        "nats": "2.29.3",
        "pino": "10.3.1",
        "pino-pretty": "13.1.3"
    },
    "devDependencies": {
        "@types/better-sqlite3": "7.6.13",
        "@types/js-yaml": "4.0.9",
        "@types/node": "25.2.3",
        "ts-node": "10.9.2",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
