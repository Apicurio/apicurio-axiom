{
    "name": "@axiom/common",
    "version": "1.0.0",
    "description": "Shared types, validation, and schemas for Apicurio Axiom",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc && npm run copy-schemas",
        "copy-schemas": "mkdir -p dist/schemas && cp -r src/schemas/* dist/schemas/",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "axiom",
        "types",
        "validation"
    ],
    "author": "Apicurio Community",
    "license": "Apache-2.0",
    "dependencies": {
        "ajv": "8.17.1",
        "ajv-formats": "3.0.1"
    },
    "devDependencies": {
        "@types/node": "25.2.3",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
