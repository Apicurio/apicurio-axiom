{
    "name": "apicurio-axiom",
    "version": "1.0.3",
    "description": "A bot that monitors GitHub events and triggers custom actions",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "reset": "rm -rf dist data node_modules",
        "clean": "rm -rf dist",
        "build": "tsc",
        "dev": "node --loader ts-node/esm --watch src/index.ts",
        "lint": "biome check .",
        "lint:fix": "biome check --write ."
    },
    "keywords": [
        "github",
        "bot",
        "automation",
        "events"
    ],
    "author": "Apicurio Community",
    "license": "Apache-2.0",
    "dependencies": {
        "@anthropic-ai/sdk": "0.74.0",
        "@anthropic-ai/vertex-sdk": "0.14.3",
        "@octokit/rest": "22.0.1",
        "ajv": "8.17.1",
        "ajv-formats": "3.0.1",
        "better-sqlite3": "12.6.2",
        "fast-glob": "3.3.3",
        "fs-extra": "11.3.3",
        "handlebars": "4.7.8",
        "js-yaml": "4.1.1",
        "node-pty": "1.1.0",
        "pino": "10.3.1",
        "pino-pretty": "13.1.3"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.14",
        "@types/better-sqlite3": "7.6.13",
        "@types/fs-extra": "11.0.4",
        "@types/js-yaml": "4.0.9",
        "@types/node": "25.2.3",
        "ts-node": "10.9.2",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
